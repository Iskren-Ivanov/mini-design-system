{
  "name": "mini-design-system",
  "version": "1.0.0",
  "private": true,
  "description": "A mini design system built with React, TypeScript, and Tailwind CSS",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:ui": "turbo run build --filter=@mini-design-system/ui",
    "storybook": "turbo run storybook --filter=@mini-design-system/storybook",
    "build:storybook": "turbo run build-storybook --filter=@mini-design-system/storybook",
    "demo": "turbo run dev --filter=@mini-design-system/demo",
    "build:demo": "turbo run build --filter=@mini-design-system/demo",
    "clean": "turbo run clean",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:ui": "turbo run test --filter=@mini-design-system/ui"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.53.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.21",
    "handlebars": "^4.7.8",
    "ramda": "^0.32.0",
    "tailwindcss": "^3.4.18",
    "turbo": "^2.5.8",
    "typescript": "^5.3.0",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/addon-links": "8.6.14",
    "@storybook/blocks": "8.6.14",
    "@storybook/test": "8.6.14",
    "storybook": "8.6.14"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0",
  "type": "module"
}
